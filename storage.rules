rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regras para materiais de disciplinas
    match /materials/{disciplineId}/{fileName} {
      // Apenas professores autenticados podem fazer upload de materiais
      allow write: if request.auth != null && 
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.userType == 'teacher';
      
      // Alunos matriculados na disciplina podem baixar materiais
      allow read: if request.auth != null && 
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.userType == 'student' &&
        exists(/databases/(default)/documents/student_disciplines/$(request.auth.uid + '_' + disciplineId));
    }
    
    // Regras para avatares de usuários
    match /avatars/{userId} {
      // Usuários podem fazer upload apenas de seus próprios avatares
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para arquivos temporários
    match /temp/{userId}/{fileName} {
      // Usuários podem fazer upload de arquivos temporários
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
